{
	"manifest_version": 2,
	"name": "Chronos",
	"version": "1.1",
	"description": "Video/Audio playback rate regulator.",
	"permissions": ["tabs", "activeTab", "*://*/*"],
	"icons": {
		"16": "./img/chronos_icon_light-16.png",
		"48": "./img/chronos_icon_light-48.png",
		"96": "./img/chronos_icon_light-96.png",
		"128": "./img/chronos_icon_light-128.png"
	},
	"background": {
		"scripts": ["./src/background.js"]

	},
	"content_scripts": [{
		"run_at": "document_idle",
		"matches": ["<all_urls>"],
		"js": ["./src/contentscript.js"]
	}],
	"browser_action": {
		"browser_style": true,
		"default_icon": "./img/chronos_icon_light-512.png",
		"theme_icons": [{
			"light": "./img/chronos_icon_light-16.png",
			"size": 16
		}, {
			"light": "./img/chronos_icon_light-32.png",
			"size": 32
		}, {
			"light": "./img/chronos_icon_light-48.png",
			"size": 48
		}, {
			"light": "./img/chronos_icon_light-128.png",
			"size": 128
		}],
		"default_popup": "./popup.html",
		"default_title": "Chronos extension"
	}
}