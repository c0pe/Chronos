{

	"manifest_version": 2,
	"name": "Chronos",
	"version": "0.1",
	"description": "Video/Audio playback speed regulator and timestamp marker.",
	"permissions": ["storage", "activeTab", "tabs",
		"contextMenus"],
	"background": {
		"scripts": ["./src/timestamp.js", "./src/background.js"]
		
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["./src/timestamp.js", "./src/content.js"]
	}],
	"browser_action": {
		"browser_style": true,
		"default_icon": "./img/chronos_icon.png",
		"default_popup": "./popup.html",
		"default_title": "Chronos extension"
	},
	"commands": {
		"incrementPlaybackRate": {
			"suggested_key": {
				"default": "Alt+L",
				"mac": "Alt+L"
			},
			"description": "Increase playback rate by 0.25."
		},
		"decrementPlaybackRate": {
			"suggested_key": {
				"default": "Alt+J",
				"mac": "Alt+J"
			},
			"description": "Decrease playback rate by 0.25."
		},
		"setMarker": {
			"suggested_key": {
				"default": "Alt+K",
				"mac": "Alt+K"
			},
			"description": "Create timestamp."
		}
	}
}