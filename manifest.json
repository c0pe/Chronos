{
	"name": "Chronos",
	"version": "0.1",
	"description": "Video/Audio playback speed regulator and timestamp marker.",
	"permissions": ["declarativeContent", "storage", "activeTab", "tabs"],
	"background": {
		"scripts": ["./src/timestamp.js","./src/background.js"],
		"persistent": false
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["./src/timestamp.js","./src/content.js"]
	}],
	"browser_action": {
		"default_icon": "./img/chronos_icon.png",
		"default_popup": "./popup.html",
		"defalt_title": "Chronos extension"
	},
	"commands": {
		"increment-playback-rate-by-025": {
			"suggested_key": {
				"default": "Alt+M",
				"mac": "Alt+M"
			},
			"description": "Increment playback rate by 0.25"
		}
	},
	"manifest_version": 2
}