{

	"manifest_version": 2,
	"name": "Chronos",
	"version": "0.1",
	"description": "Video/Audio playback speed regulator and timestamp marker.",
	"permissions": ["tabs", "activeTab", "webNavigation", "*://*/*"],
	"background": {
		"scripts": ["./src/timestamp.js", "./src/background.js"]

	},
	"content_scripts": [{
		"run_at": "document_idle",
		"matches": ["<all_urls>"],
		"js": ["./src/timestamp.js", "./src/contentscript.js"]
	}],
	"browser_action": {
		"browser_style": true,
		"default_icon": "./img/chronos_icon_light.png",
		"theme_icons": [{
			"light": "./img/chronos_icon_light.png",
			"dark": "./img/chronos_icon_dark.png",
			"size": 16
		}, {
			"light": "./img/chronos_icon_light.png",
			"dark": "./img/chronos_icon_dark.png",
			"size": 32
		}],
		"default_popup": "./popup.html",
		"default_title": "Chronos extension: Speed up - ALT + 'L' | Slow down - ALT + 'J' | Place marker - ALT + 'K'"
	},
	"commands": {
		"resetPlaybackRate": {
			"suggested_key": {
				"default": "Alt+R",
				"mac": "Alt+R"
			},
			"description": "Reset playback rate."
		},
		"incrementPlaybackRate": {
			"suggested_key": {
				"default": "Alt+L",
				"mac": "Alt+L"
			},
			"description": "Increase playback rate by 0.25."
		},
		"decrementPlaybackRate": {
			"suggested_key": {
				"default": "Alt+J",
				"mac": "Alt+J"
			},
			"description": "Decrease playback rate by 0.25."
		},
		"setMarker": {
			"suggested_key": {
				"default": "Alt+K",
				"mac": "Alt+K"
			},
			"description": "Create timestamp marker."
		}
	}
}